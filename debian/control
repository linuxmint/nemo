Package: nemo
Architecture: any
Depends: ${shlibs:Depends},
         ${misc:Depends},
         nemo-data (= ${source:Version}),
         shared-mime-info (>= 0.50),
         desktop-file-utils (>= 0.7),
         gvfs (>= 1.3.2),
         libglib2.0-data,
         libcinnamon-desktop4 (>= 2.6.1),
         libxapp1,
         cinnamon-desktop-data
Recommends: eject,
            librsvg2-common,
